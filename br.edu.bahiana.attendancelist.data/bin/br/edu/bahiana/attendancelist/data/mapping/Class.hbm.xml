<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="br.edu.bahiana.attendancelist.core.businessclasses">
	<class name="Class" table="AUL_AULA">
		<id name="ID" column="aul_id_aula">
			<generator class="increment" />
		</id>
		<property name="classNumber">
			<column name="aul_nu_aula"  />
		</property>
		<property name="plannedDate" type="date">
			<column name="aul_dt_prevista" />
		</property>
	</class>

</hibernate-mapping>